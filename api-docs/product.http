###
# 상품 등록 <OCI 이미지 버킷 미연결>
POST {{domain}}/business/products
Content-Type: application/json
Authorization: Bearer {{accessToken}}

{
  "name": "테스트 상품",
  "description": "테스트 상품 설명",
  "price": "10000",
  "stock": "50",
  "startDay": "2024-12-01",
  "startTime": "12:00",
  "category": "전자제품",
  "status": "판매중",
  "images": [
    {
      "imageUrl": "https://example.com/main-image.jpg",
      "thumbnailUrl": false
    },
    {
      "imageUrl": "https://example.com/main-image-2.jpg",
      "thumbnailUrl": false
    }
  ]
}

###
# 상품 전체 조회
GET {{domain}}/business/products/my-products
Authorization: Bearer {{accessToken}}

###
# 상품 상세 조회
POST {{domain}}/business/products/details
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "productId": "a9f9b86b-b872-4689-ac78-5fb22bb65adb"
}

###
# 상품 수정 <OCI 이미지 버킷 미연결>
PUT {{domain}}/business/products
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "productId": "a9f9b86b-b872-4689-ac78-5fb22bb65adb",
  "name": "수정된 상품명",
  "description": "수정된 상품 설명",
  "price": "20000",
  "stock": "30",
  "startDay": "2024-12-15",
  "startTime": "14:00",
  "category": "가전제품",
  "status": "판매완료",
  "images": [
    {
      "imageUrl": "https://example.com/main-image10.jpg",
      "thumbnailUrl": false
    },
    {
      "imageUrl": "https://example.com/main-image-100.jpg",
      "thumbnailUrl": false
    }
  ]
}

###
# 상품 삭제 <OCI 이미지 버킷 미연결>
DELETE {{domain}}/business/products
Authorization: Bearer {{accessToken}}
Content-Type: application/json

{
  "productId": "1ca06d0d-e76d-4a15-8d8a-1e2e63c5f2d6"
}

